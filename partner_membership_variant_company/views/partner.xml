<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">view.partner.form.membership.variant.company</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form"/>
            <field name="arch" type="xml">

            <field name="member_lines" position="before">
                <field name="member_line_variant_company_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>

    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.membership.variant.company</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">

            <field name="active" position="after">
                <field name="member_line_variant_company_ids" widget="many2many_tags" optional="hide" />
            </field>

        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.select.membership.variant.company</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">

            <field name="user_id" position="after">
                <field name="member_line_variant_company_ids" />
            </field>

        </field>
    </record>

</odoo>
