<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="membership_line_tree" model="ir.ui.view">
        <field name="name">membership.line.tree</field>
        <field name="model">membership.membership_line</field>
        <field name="arch" type="xml">
            <tree string="Membership Lines" create="false" delete="false" default_order="partner">
                <field name="partner" optional="show"/>
                <field name="email" optional="hide"/>
                <field name="date" optional="show"/>
                <field name="date_from" optional="show"/>
                <field name="date_to" optional="show"/>
                <field name="date_cancel" optional="hide"/>
                <field name="membership_id" optional="show"/>
                <field name="member_price" optional="hide"/>
                <field name="account_invoice_id" optional="show"/>
                <field name="state" optional="show"/>
                <field name="contract_state" optional="show"/>
                <field name="company_id" optional="show"/>
                <field name="membership_company_id" optional="show"/>
                <field name="invoice_partner_id" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="membership_line_form" model="ir.ui.view">
        <field name="name">membership.line.form</field>
        <field name="model">membership.membership_line</field>
        <field name="arch" type="xml">
            <form string="Membership Lines" create="false" delete="false">
                <sheet>
                    <notebook>
                        <page string="Membership line">
                            <group>
                                <field name="partner" optional="show"/>
                                <field name="email" optional="hide"/>
                                <field name="date" optional="show"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="membership_line_search" model="ir.ui.view">
        <field name="name">membership.line.search</field>
        <field name="model">membership.membership_line</field>
        <field name="arch" type="xml">
            <search string="Membership line">
                <field string="Partner" name="partner"/>
                <field string="Membership" name="membership_id"/>
                <field string="Company" name="company_id"/>
                <field string="Membership company" name="membership_company_id"/>
                <filter string="Valid Memberships" name="valid_memberships" domain="['|','|','|','&amp;',('state','=','waiting'),('date_to','&gt;',context_today().strftime('%Y-%m-%d')),'&amp;',('state','=','invoiced'),('date_to','&gt;',context_today().strftime('%Y-%m-%d')),'&amp;',('state','=','free'),('date_to','&gt;',context_today().strftime('%Y-%m-%d')),'&amp;',('state','=','paid'),('date_to','&gt;',context_today().strftime('%Y-%m-%d'))]" context="{'group_by': 'date_from:year'}" help="Membership is valid if it is not expired and the state is in waiting, invoiced, free or paid."/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter name="membership_id" string="Membership" domain="[]" context="{'group_by':'membership_id'}"/>
                    <filter name="company_id" string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                    <filter name="membership_company_id" string="Membership company" domain="[]" context="{'group_by':'membership_company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="membership_line_action" model="ir.actions.act_window">
        <field name="name">Membership lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">membership.membership_line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="membership_line_view.membership_line_tree"/>
        <field name="context">{"search_default_valid_memberships":1}</field>
    </record>
    <menuitem id="menu_membership_line" action="membership_line_action" parent="membership.menu_association" sequence="20"/>
</odoo>
