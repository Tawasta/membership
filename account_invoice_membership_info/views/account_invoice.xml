<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form.membership</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <page name="other_info" position="after">
                <page name="membership" string="Membership">
                    <group>
                        <field name="membership_company_id" />
                        <field name="membership_line_ids">
                            <tree>
                                <field name="membership_id" />
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="company_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="invoice_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree.membership</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="membership_company_id" />
            </field>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select.membership</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="status" position="after">
                <field name="membership_company_id" />
                <filter string="Membership company" name="membership_company_id" context="{'group_by':'membership_company_id'}"/>
            </filter>

            <field name="number" position="after">
                <field name="membership_company_id" />
            </field>
        </field>
    </record>

</odoo>
