<?xml version="1.0" encoding="utf-8"?>

<odoo noupdate="0">
    <record id="ir_cron_recompute_invoice_membership_company" model="ir.cron">
        <field name="name">Invoice: Recompute membership lines</field>
        <field name="model_id" ref="model_account_invoice"/>
        <field name="state">code</field>
        <field name="code">
invoices = model.search([('membership_line_ids', '=', True)])
invoices._compute_membership_invoice()
invoices._compute_membership_company()
        </field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>
